---
// German page (de/index.astro)

// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - UI
import Hero from '../../components/blocks/hero/HomeCTA.astro'
import Features from '../../components/blocks/features/FeatureCards.astro'
import Pricing from '../../components/blocks/pricing/PricingColumns.astro'
import FAQ from '../../components/blocks/FAQ/Basic.astro'

// i18n
import { getTranslations } from '../../i18n/translations';

// Get the current language from the directory name
const currentLanguage = 'de';
const t = getTranslations(currentLanguage);

console.log(`German Page - Current language: ${currentLanguage}`);
console.log(`German Page - Home title: ${t.sections?.home?.title}`);

// SEO translations
const SEO = {
  title: t.sections?.home?.title || "Your Productivity Toolkit",
  description: t.sections?.home?.subtitle || "Boost your workflow with powerful tools"
}
---

<Layout title={SEO.title} description={SEO.description} currentLanguage={currentLanguage}>
  <!-- Home section -->
  <div id="home">
    <Hero currentLanguage={currentLanguage} />
  </div>
  
  <!-- Features section -->
  <div id="features">
    <Features currentLanguage={currentLanguage} />
  </div>
  
  <!-- Pricing section
  <div id="pricing">
    <Pricing currentLanguage={currentLanguage} />
  </div> -->
  
  <!-- FAQ section -->
  <div id="faq">
    <FAQ classes="bg-slate-50 dark:bg-neutral-900/40" currentLanguage={currentLanguage} />
  </div>
  
  <!-- Contact section -->
  <div id="contact">
    <!-- Contact form will be added here -->
  </div>
</Layout>