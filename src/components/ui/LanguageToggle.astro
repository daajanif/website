---
import { languages, defaultLanguage, languageFlags } from '../../i18n/config';

const { currentLanguage = defaultLanguage } = Astro.props;
const currentPath = Astro.url.pathname;

// Get path without language prefix
let pathWithoutLang = currentPath;
const segments = currentPath.split('/');
if (segments[1] && Object.keys(languages).includes(segments[1])) {
  // Remove language segment
  segments.splice(1, 1);
  pathWithoutLang = segments.join('/') || '/';
}
---

<div class="language-toggle flex items-center space-x-2 p-2 bg-gray-100 dark:bg-gray-900 rounded-lg shadow-md">
  <!-- Language icon -->
  <div class="mr-2 text-gray-600 dark:text-gray-300">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
      <path fill-rule="evenodd" d="M9 2.25a.75.75 0 0 1 .75.75v1.506a49.384 49.384 0 0 1 5.343.371.75.75 0 1 1-.186 1.489c-.66-.083-1.323-.151-1.99-.206a18.67 18.67 0 0 1-2.97 6.323c.318.384.65.753 1 1.107a.75.75 0 0 1-1.07 1.052A18.902 18.902 0 0 1 9 13.687a18.823 18.823 0 0 1-5.656 4.482.75.75 0 0 1-.688-1.333 17.323 17.323 0 0 0 5.396-4.353A18.72 18.72 0 0 1 5.89 8.598a.75.75 0 0 1 1.388-.568A17.21 17.21 0 0 0 9 11.224a17.168 17.168 0 0 0 2.391-5.165 48.04 48.04 0 0 0-8.298.307.75.75 0 0 1-.186-1.489 49.159 49.159 0 0 1 5.343-.371V3A.75.75 0 0 1 9 2.25ZM15.75 9a.75.75 0 0 1 .68.433l5.25 11.25a.75.75 0 1 1-1.36.634l-1.198-2.567h-6.744l-1.198 2.567a.75.75 0 0 1-1.36-.634l5.25-11.25A.75.75 0 0 1 15.75 9Zm-2.672 8.25h5.344l-2.672-5.726-2.672 5.726Z" clip-rule="evenodd" />
    </svg>
  </div>
  
  <select 
    id="language-select"
    class="bg-white dark:bg-gray-800 rounded px-3 py-1 text-sm cursor-pointer border border-gray-300 dark:border-gray-600"
    aria-label="Select language"
  >
    {Object.entries(languages).map(([code, name]) => (
      <option value={code} selected={code === currentLanguage}>
        {languageFlags[code as keyof typeof languageFlags]} {name}
      </option>
    ))}
  </select>
</div>

<script define:vars={{ languages, pathWithoutLang }}>
  document.getElementById('language-select').addEventListener('change', (e) => {
    const selectedLang = e.target.value;
    if (selectedLang) {
      const newPath = selectedLang === 'en' 
        ? pathWithoutLang 
        : `/${selectedLang}${pathWithoutLang === '/' ? '' : pathWithoutLang}`;
      window.location.href = newPath;
    }
  });
</script>